+yfm.
  layout: default

.page
  .post
    .post__header
      a.post__home-link(href="/")
        img(src="/assets/images/avatar.jpg")
    h1.post__title
      +l("page.title")
    .post__date
      | By Shu Uesugi&nbsp;<span class="post__date-separator">/</span>&nbsp;
      +l("page.date | date: '%b %d, %Y' ")
    .textblock
      +l("content")
      hr
      p
        a(href="https://twitter.com/share" class="twitter-share-button" data-url="{{ site.github.url }}{{ page.url }}" data-text="{{ page.title }}" data-via="chibicode" data-size="large") Tweet
        | &nbsp;
        a(href="https://twitter.com/chibicode" class="twitter-follow-button" data-show-count="true" data-size="large" data-dnt="true") Follow @chibicode
.post__nav
  .page
    .nav__col.nav__col--3
      h3.nav__heading
        | About Me
      .textblock.nav__textblock
        +_include("markdown.html filename='about_short.md'")
    .nav__col.nav__col--3
      +_include('nav_featured.html')
    +_include('nav_monthly.html')
    +_include('footer.html')
