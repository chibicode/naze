li
  +_capture("post_url")
    +_if("post.external_url")
      +l("post.external_url")
      +_else
        +l("post.url")
  a(href="{{ post_url | strip_newlines }}")
    span.nav__post-title
      +l("post.title")
      +_if("include.highlight_featured and post.featured) or post.external_url or post.icon")
        | &nbsp;
        span.nav__post-icon
          +_if("include.highlight_featured and post.featured")
            i(class="fa fa-star-o")
            +_elsif("post.external_url")
              i(class="fa fa-external-link")
            +_else
              i(class="fa {{ post.icon }}")
    span.nav__post-date
      +l("post.date | date:site.data[site.locale].date ")

